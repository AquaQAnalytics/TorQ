{
	"name": "Process Check - hdb1",
	"type": "metric alert",
	"query": "min(last_1m):avg:system.processes.number{hdb1} < 1",
	"message": "Alert if HDB1 process goes down.",
	"tags": [
		"process"
	],
	"options": {
		"notify_audit": false,
		"locked": false,
		"timeout_h": 0,
		"new_host_delay": 300,
		"require_full_window": true,
		"notify_no_data": false,
		"renotify_interval": "0",
		"escalation_message": "",
		"no_data_timeframe": null,
		"include_tags": true,
		"thresholds": {
			"critical": 1
		}
	}
}
