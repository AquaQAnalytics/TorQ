{
	"name": "Process Check -hdb2",
	"type": "metric alert",
	"query": "min(last_1m):avg:system.processes.number{hdb2} < 1",
	"message": "Alert if the HDB2 process goes down.",
	"tags": [
		"process"
	],
	"options": {
		"notify_audit": false,
		"locked": false,
		"timeout_h": 0,
		"new_host_delay": 300,
		"require_full_window": false,
		"notify_no_data": true,
		"renotify_interval": "0",
		"escalation_message": "",
		"no_data_timeframe": 10,
		"include_tags": true,
		"thresholds": {
			"critical": 1
		}
	}
}
