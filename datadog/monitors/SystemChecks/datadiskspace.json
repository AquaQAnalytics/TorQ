{
	"name": "Data Disk Space",
	"type": "metric alert",
	"query": "max(last_5m):avg:system.disk.in_use{device:/dev/sda1} > 0.96",
	"message": "The percentage disk space used has exceeded 96%.\n",
	"tags": [
		"system"
	],
	"options": {
		"notify_audit": false,
		"locked": false,
		"timeout_h": 0,
		"new_host_delay": 300,
		"require_full_window": true,
		"notify_no_data": false,
		"renotify_interval": "0",
		"escalation_message": "",
		"no_data_timeframe": null,
		"include_tags": true,
		"thresholds": {
			"critical": 0.96,
			"warning": 0.9
		}
	}
}
